{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["es2023", "DOM", "DOM.Iterable", "esnext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
//    "jsx": "react",
    "esModuleInterop": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["vite/client", "unplugin-icons/types/react"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "type.d.ts",
    "auto-imports.d.ts",
    "node_modules/.pnpm/unplugin-auto-import@0.18.2_rollup@4.21.2/node_modules/unplugin-auto-import/auto-imports.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
